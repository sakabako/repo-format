{
  "esformatter": {
    "allowShebang": true
  },
  "root": true,
  "plugins": [
    "esformatter-collapse-objects",
    "esformatter-remove-trailing-commas",
    "esformatter-eol-last",
    "esformatter-dot-notation",
    "esformatter-semicolons",
    "esformatter-braces",
    "esformatter-quotes"
  ],
  "collapseObjects": {
    "ObjectExpression": {
      "maxLineLength": 80,
      "maxKeys": 4,
      "maxDepth": 1,
      "forbidden": [
        "FunctionExpression"
      ]
    },
    "ArrayExpression": {
      "maxLineLength": 80,
      "maxKeys": 4,
      "maxDepth": 1,
      "forbidden": [
        "FunctionExpression"
      ]
    }
  },

  "jsx": {
    "attrsOnSameLineAsTag": false,
    "maxAttrsOnTag": 1,
    "firstAttributeOnSameLine": false,
    "alignWithFirstAttribute": true
  },
  
  "quotes": {
    "type": "single",
    "avoidEscape": true
  },

  "indent" : {
    "value": "    ",
    "MemberExpression": 0
  },


  "lineBreak" : {
    "value" : "\n",

    "before" : {
    },

    "after" : {
    }
  },


  "whiteSpace" : {
    "value" : " ",
    "removeTrailing" : 1,

    "before" : {
      "ArrowFunctionExpressionClosingBrace": 1,
      "PropertyName" : 1
    },

    "after" : {
      "FunctionReservedWord" : 1,
      "FunctionName" : 1
    }
  }

}
